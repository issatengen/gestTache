{% extends 'base.html.twig' %}

{% block title %}Activity index{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Liste des activités</h1>
        <a href="{{ path('app_activity_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fa fa-add me-1"></i> Ajouter une activité
        </a>
    </div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}" class="text-decoration-none">Tableau de bord</a></li>
            <li class="breadcrumb-item active" aria-current="page">Activités</li>
        </ol>
    </nav>
    <hr class="sidebar-divider mb-4">

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Libellé</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for activity in activities %}
                    <tr>
                        <td>{{ activity.id }}</td>
                        <td>{{ activity.label }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_activity_show', {'id': activity.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Afficher"><i class="fa fa-eye me-1"></i></a>
                            <a href="{{ path('app_activity_edit', {'id': activity.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier"><i class="fa fa-pencil me-1"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">Aucune activité trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
