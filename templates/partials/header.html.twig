<!-- Sidebar Offcanvas -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title text-primary-emphasis" id="sidebarOffcanvasLabel">
            <i class="fas fa-truck-monster me-2"></i>TaskMaster
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
        <nav class="nav flex-column">
            <div class="sidebar-heading px-3 mb-1 text-muted">Core</div>
            <a class="nav-link text-primary-emphasis px-3 {% if app.request.attributes.get('_route') starts with 'app_dash' %} fw-bold bg-success text-white {% endif %}" href="{{ path('app_dashboard') }}" id="page_link"><i class="fas fa-tachometer-alt me-2"></i>Tableau de bord</a>
            <a class="nav-link text-primary-emphasis px-3 {% if app.request.attributes.get('_route') starts with 'app_my_task' %} fw-bold bg-success text-white {% endif %}" href="{{ path('app_my_task_index', {'id': app.user.id}) }}" id="page_link"><i class="fas fa-project-diagram me-2"></i>Mes tâches</a>
            {# <a class="nav-link text-primary-emphasis px-3" href="#"><i class="fas fa-project-diagram me-2"></i>Projets</a> #}

            {% if app.user.role.code == 'ADMIN' %}
                <a class="nav-link text-primary-emphasis px-3 {% if app.request.attributes.get('_route') starts with 'app_task' %} fw-bold bg-success text-white {% endif %}" href="{{ path('app_task_index') }}" href="#" id="page_link" ><i class="fas fa-tasks me-2"></i>Tâche</a>
                <a class="nav-link text-primary-emphasis px-3 {% if app.request.attributes.get('_route') starts with 'app_user' %} fw-bold bg-success text-white {% endif %}" href="{{ path('app_user_index') }}" id="page_link"><i class="fas fa-users me-2"></i>Utilisateurs</a>
                <a class="nav-link text-primary-emphasis px-3 {% if app.request.attributes.get('_route') starts with 'app_department' %} fw-bold bg-success text-white {% endif %}" href="{{ path('app_department_index') }}" ><i class="fas fa-building-user me-2"></i>Département</a>
            {% endif %}
    
            <hr>
            <div class="sidebar-heading px-3 mb-1 text-muted">Gestion des tâches</div>
            <a class="nav-link text-primary-emphasis px-3 {% if app.request.attributes.get('_route') starts with 'app_type_activity' %} fw-bold bg-success text-white {% endif %}" href="{{ path('app_type_activity_index') }}" id="page_link"><i class="fas fa-tags me-2"></i>Types de tâche</a>
