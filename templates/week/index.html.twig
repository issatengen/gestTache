{% extends 'base.html.twig' %}

{% block title %}Week index{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Semaine</h1>
        <a href="{{ path('app_task_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fa fa-add me-1"></i> Tâches
        </a>
    </div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}" class="text-decoration-none">Tableau de bord</a></li>
            <li class="breadcrumb-item active" aria-current="page">Semaine</li>
        </ol>
    </nav>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Mois</th>
                            <th>Année</th>
                            <th>Début</th>
                            <th>Fin</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for type_activity in type_activities %}
                        <tr>
                            <td>{{ week.id }}</td>
                            <td>{{ week.month }}</td>
                            <td>{{ week.year }}</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    {{ week.debut ? week.debut|date('d/m/Y') : '-' }}
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    {{ week.fin ? week.fin|date('d/m/Y') : '-' }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('app_week_show', {'id': week.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="{{ path('app_week_edit', {'id': week.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Aucun type d'activité trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('app_week_new') }}">Create new</a>
{% endblock %}
