{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 text-primary-emphasis"> <i class="fa fa-users"></i> Utilisateurs</h1>
        <a href="{{ path('app_user_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fa fa-add me-1"></i> Ajouter
        </a>
    </div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}" class="text-decoration-none">Tableau de bord</a></li>
            <li class="breadcrumb-item active" aria-current="page">Utilisateurs</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6 align-items-end bg-light shadow-sm border p-3">
            <h3 class="h5 mb-0 text-gray-800 text-primary-emphasis mb-2">
                Recherche dans un interval de dates
            </h3>
            <form class="d-flex mb-3" action="{{ path('app_user_index_search') }}">
                <div class="row">
                    <div class="col-md-5">
                        <input type="date" name="debut" class="form-control me-2" placeholder="Date de début" required>
                        {% if(debut is not empty) %}
                            <b><span>{{ debut }}</span></b>
                        {% else %}
                            <b><span></span></b>
                        {% endif %}
                    </div>
                    <div class="col-md-5">
                        <input type="date" name="fin" class="form-control me-2" placeholder="Date de fin" required>
                        {% if(debut is not empty) %}
                            <b><span>{{ fin }}</span></b>
                        {% else %}
                            <span></span>
                        {% endif %}
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                    <div class="col-md-8">
                        <select name="department" id="" class="form-control me-2" required>
                            <option value="" selected disabled><b></b>Choisissez un département</option>
                            {% if(departments is not empty) %}
                                {% for department in departments %}
                                    <option value="{{ department.id }}" class="form-control me-2">{{ department.label }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                        {% if(departmentX is not empty) %}
                            <span>{{ departmentX.label }}</span>
                        {% else %}
                            <span></span>
                        {% endif %}
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr class="sidebar-divider mb-4">

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Nom et Prénom</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Département</th>
                        <th scope="col">nombre d'heures</th>
                        {# <th scope="col">Rôle</th> #}
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td id="pp"><img src="{{ asset('upload_images/' ~ user.profilePicture ) }}" alt="PP" style="width: 70px; height: 70px; object-fit: cover;" class="rounded-circle pp" ></td>
                        <td>{{ user.surname }} {{ user.name }}</td>
                        <td>{{ user.telephone }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.department.label }}</td>
                        <td class="fw-bold">{{ user.totalHours*10 }}H</td>
                        {# <td>{{ user.role }}</td> #}
                        <td class="text-end">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Afficher"><i class="fa fa-eye me-1"></i></a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier"><i class="fa fa-pencil me-1"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('app_user_new') }}" class="d-none mt-3 d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fa fa-add me-1"></i> Ajouter
    </a>
{% endblock %}
