
<div class="cart shadow-sm">
    <div class="cart-body p-0">
    {{ form_start(form) }}
        <div class="form-group">
            <label class="fw-bold">Désignation</label>
            {{ form_widget(form.designation, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.designation) }}
        </div>
        <div class="form-group">
            <label class="fw-bold">Date début</label>
            {{ form_widget(form.debut, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.debut) }}
        </div>
        <div class="form-group">
            <label class="fw-bold">Date fin</label>
            {{ form_widget(form.fin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fin) }}
        </div>
        <div class="form-group">
            <label class="fw-bold">Semaine</label>
            {{ form_widget(form.task, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.task) }}
        </div>
        <div class="form-group">
            <label class="fw-bold">Utilisateurs participant</label>
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.user) }}
        </div>
        <button class="btn btn-primary">
            <i class="fa fa-save"></i>
            {{ button_label|default('Enregistrer') }}
        </button>
        {{ form_end(form) }}
    </div>
</div>
