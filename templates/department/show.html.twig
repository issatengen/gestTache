{% extends 'base.html.twig' %}

{% block title %}Department{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 text-primary-emphasis"> {{ department.label }}</h1>
        <a href="{{ path('app_department_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm">
            <i class="fa fa-arrow-left me-1"></i> Liste des départements
        </a>
    </div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}" class="text-decoration-none">Tableau de bord</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_department_index') }}" class="text-decoration-none">Liste des départements</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ department.label }}</li>
        </ol>
    </nav>
    <hr class="sidebar-divider mb-4">

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 20%;">Code</th>
                        <td>{{ department.code }}</td>
                    </tr>
                    <tr>
                        <th>Libellé</th>
                        <td>{{ department.label }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <a href="{{ path('app_department_edit', {'id': department.id}) }}" class="btn btn-secondary"><i class="fa fa-pencil me-1"></i> Modifier</a>
        {{ include('department/_delete_form.html.twig') }}
    </div>
{% endblock %}
